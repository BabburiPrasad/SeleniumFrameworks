package SeleniumWebdriverPractice.com.datadriven;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;

import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;


public class ReadExcelFile 
{
	XSSFWorkbook workbook;
	XSSFSheet sheet;

	public ReadExcelFile()
	{
		String excelpath = "C:\\Users\\HP\\Documents\\TestData";
		
		try 
		{
			File fl = new File(excelpath);
			FileInputStream stream = new FileInputStream(fl);
			workbook = new XSSFWorkbook(stream);
			
		} catch (IOException  e) 
		{
			//e.printStackTrace();
			System.out.println("Test Data File Not found" +e);
		}
		
	}
	

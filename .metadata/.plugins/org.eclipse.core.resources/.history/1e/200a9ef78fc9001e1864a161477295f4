package SeleniumWebdriverPractice.com.datadriven;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.Test;

public class DDRegistration 
{
	public static WebDriver driver;
	String baseURL = "https://naveenautomationlabs.com/opencart/index.php?route=account/login";
	
	@Test(dataProvider="testdata")
	public void register(String firstname, String lastname, String email, String password, String cnfpassword)
	{
		driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get(baseURL);
		
		driver.manage().timeouts().implicitlyWait(20, TimeUnit.SECONDS);
		
		driver.findElement(By.xpath("//a[@class='btn btn-primary']")).click();
		
	}

}
